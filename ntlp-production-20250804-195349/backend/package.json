{
  "name": "ntlp-backend",
  "version": "1.0.0",
  "description": "Backend API for NTLP Conference Management System",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "server": "nodemon index.js",
    "db:setup": "psql -U postgres -d ntlp_conference -f database/schema.sql",
    "db:seed": "psql -U postgres -d ntlp_conference -f database/sample-data.sql",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "pm2:start": "pm2 start index.js --name ntlp-backend",
    "pm2:stop": "pm2 stop ntlp-backend",
    "pm2:restart": "pm2 restart ntlp-backend",
    "pm2:logs": "pm2 logs ntlp-backend"
  },
  "keywords": [
    "conference",
    "nlp",
    "api",
    "backend",
    "registration"
  ],
  "author": "NTLP Conference Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
