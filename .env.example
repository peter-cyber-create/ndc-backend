# Environment Variables for NTLP Backend API
# Copy this file to .env and update the values

# NTLP Conference Backend Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ntlp_conference
DB_USER=postgres
DB_PASS=your_password

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-for-external-integrations

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=NTLP Conference <noreply@ntlp-conference.org>

# Admin Configuration
ADMIN_EMAIL=admin@ntlp-conference.org
ADMIN_PASSWORD=change-this-secure-password

# Conference Information
CONFERENCE_NAME=NTLP Conference 2025
CONFERENCE_EMAIL=contact@ntlp-conference.org
CONFERENCE_PHONE=+1 (555) 123-4567
CONFERENCE_WEBSITE=https://ntlp-conference.org

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_RATE_LIMITING=true
ENABLE_DETAILED_LOGGING=true

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
