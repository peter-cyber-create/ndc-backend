{
  "name": "ntlp-backend",
  "version": "1.0.0",
  "description": "Backend API for NTLP Conference Management System",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "server": "nodemon index.js",
    "db:setup": "mysql -u $DB_USER -p$DB_PASS $DB_NAME < database/schema.sql",
    "db:seed": "mysql -u $DB_USER -p$DB_PASS $DB_NAME < database/sample-data.sql",
    "db:migrate": "node scripts/migrate.js",
    "db:backup": "node scripts/backup.js",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ntlp-backend",
    "pm2:restart": "pm2 restart ntlp-backend",
    "pm2:logs": "pm2 logs ntlp-backend",
    "pm2:monitor": "pm2 monit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "health:check": "node scripts/health-check.js"
  },
  "keywords": [
    "conference",
    "nlp",
    "api",
    "backend",
    "registration",
    "production"
  ],
  "author": "NTLP Conference Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "redis": "^4.6.12",
    "sequelize": "^6.37.7",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ntlp-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ntlp-backend/issues"
  },
  "homepage": "https://github.com/your-org/ntlp-backend#readme"
}
